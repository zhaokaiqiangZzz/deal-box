<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaoqiangzzz.deal_box">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.xiaoqiangzzz.deal_box.ui.auth.LoginActivity"
            android:label="登录">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaoqiangzzz.deal_box.ui.chat.ChatActivity"
            android:label="聊天">
        </activity>
        <activity
            android:name="com.xiaoqiangzzz.deal_box.ui.goods.GoodsActivity"
            android:label="商品">
        </activity>
        <activity
            android:name="com.xiaoqiangzzz.deal_box.ui.goods_list.GoodsListActivity"
            android:label="商品列表">
        </activity>
        <activity
            android:name="com.xiaoqiangzzz.deal_box.ui.issue_goods.IssueGoodsActivity"
            android:label="添加商品">
        </activity>
    </application>

</manifest>